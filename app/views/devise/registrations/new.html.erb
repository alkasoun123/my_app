<div class="row-fluid">
  <div class="span4 well ">
   <div class="col-md-2 col-md-offset-5">
  <h2>Sign up</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), :html => {:class => "form-horizontal"}) do |f| %>
    <%= devise_error_messages! %>

       <div class="form-group">

     <div class="field "><%= f.label :name %><br />
          <%= f.text_field :name, autofocus: true,  :class => 'text_field'  %></div></div>

        <div class="form-group">

     <div class="field">
          <%= f.label :image %><br/>
              <%= f.file_field :images  %>
      </div>
      </div>

     <div class="form-group">

    <div class="field">
      <%= f.label :email , :class => 'control-label'%><br />
      <%= f.email_field :email, autofocus: true ,  :class => 'text_field'%>
    </div>
    </div>

      <div class="form-group">

    <div class="field">
      <%= f.label :password %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "off", :class => 'text_field' %>
    </div>
    </div>

     <div class="form-group">

    <div class="field">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, autocomplete: "off" , :class => 'text_field' %>
    </div>
    </div>

    <div class="form-group">
    <div class="actions">
      <%= f.submit "Sign up", class: "follow-button btn btn-info" %>
    </div>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
     </div>
   </div>
</div